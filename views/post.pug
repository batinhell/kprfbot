    main
      section.container.clearfix
        section.main-contant
          article.post-item
            h1.post-item-title #{post.title}
            .post-item-top.clearfix
              .post-item-top-data
                data(value='19.03.2017') #{post.date}
              #hypercomments_widget2
            .contant 
              img(src="/" + post.image)
              | !{post.shortContent}
              p
              | !{post.content}
            #hypercomments_widget
            script(type='text/javascript').
              _hcwp = window._hcwp || [];
              _hcwp.push({widget:"Stream", widget_id: 88515});
              _hcwp.push({widget:"Mixstream", widget_id: 88515, xid: "page_2", selector:"#view", label:"{%COUNT%}", hc_disable: 1});
              (function() {
              if("HC_LOAD_INIT" in window)return;
              HC_LOAD_INIT = true;
              var lang = (navigator.language || navigator.systemLanguage || navigator.userLanguage || "ru").substr(0, 2).toLowerCase();
              var hcc = document.createElement("script"); hcc.type = "text/javascript"; hcc.async = true;
              hcc.src = ("https:" == document.location.protocol ? "https" : "http")+"://w.hypercomments.com/widget/hc/88515/"+lang+"/widget.js";
              var s = document.getElementsByTagName("script")[0];
              s.parentNode.insertBefore(hcc, s.nextSibling);
              })();
